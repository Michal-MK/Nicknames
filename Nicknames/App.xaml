<Application x:Class="Nicknames.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Nicknames"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
		<SolidColorBrush x:Key="Empty" Color="White"/>
		<SolidColorBrush x:Key="Neutral" Color="Wheat"/>
		<SolidColorBrush x:Key="Red" Color="IndianRed"/>
		<SolidColorBrush x:Key="Blue" Color="CadetBlue"/>

		<SolidColorBrush x:Key="TextLight" Color="#ff202020"/>
		<SolidColorBrush x:Key="TextDark" Color="#ffacacac"/>
	</Application.Resources>
</Application>
