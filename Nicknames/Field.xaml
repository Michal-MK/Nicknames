<UserControl x:Class="Nicknames.Field"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nicknames"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<UserControl.Resources>
		<BrushConverter x:Key="ColorConv"/>
	</UserControl.Resources>

	<UserControl.DataContext>
		<local:FieldModel/>
	</UserControl.DataContext>
	<Border BorderThickness="2" BorderBrush="Black" Background="{Binding FillColor}" MouseLeftButtonDown="Grid_MouseLeftButtonDown" MouseRightButtonDown="Grid_MouseRightButtonDown">
		<Grid>
			<Grid Margin="30">
				<Viewbox>
					<TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding Content, UpdateSourceTrigger=PropertyChanged}"/>
				</Viewbox>
			</Grid>
		</Grid>
	</Border>
</UserControl>
